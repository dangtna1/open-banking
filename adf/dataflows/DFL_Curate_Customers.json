{
    "name": "DFL_Curate_Customers",
    "properties": {
        "type": "MappingDataFlow",
        "typeProperties": {
            "sources": [
                {
                    "dataset": {
                        "referenceName": "DS_ADLS_Customers_Raw",
                        "type": "DatasetReference"
                    },
                    "name": "srcCustomers"
                }
            ],
            "sinks": [
                {
                    "dataset": {
                        "referenceName": "DS_ADLS_Curated_Customers",
                        "type": "DatasetReference"
                    },
                    "name": "snkCuratedCustomers"
                }
            ],
            "transformations": [],
            "scriptLines": [
                "source(output(",
                "          CustomerID as string,",
                "          FullName as string,",
                "          Age as string,",
                "          AgeBand as string,",
                "          IncomeMonthly as string,",
                "          IncomeBand as string,",
                "          City as string,",
                "          RegionCode as string,",
                "          Persona as string,",
                "          RiskSegment as string",
                "     ),",
                "     allowSchemaDrift: true,",
                "     validateSchema: false,",
                "     ignoreNoFilesFound: false) ~> srcCustomers",
                "srcCustomers sink(allowSchemaDrift: true,",
                "     validateSchema: false,",
                "     umask: 0022,",
                "     preCommands: [],",
                "     postCommands: [],",
                "     skipDuplicateMapInputs: true,",
                "     skipDuplicateMapOutputs: true) ~> snkCuratedCustomers"
            ]
        }
    }
}